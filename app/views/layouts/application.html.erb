<!DOCTYPE html>
<html>
<head>
  <title>Movieapp2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Movie App", root_path, class:"navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <%= form_tag(movies_path, :method => "get", class: "form-control") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Movies", class: "form-control" %>
          </div>
            <%= submit_tag "Search", class: "btn btn-default" %>
          <% end %>
      </form>
      <% if signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag(current_user.avatar.url, size: "48", class: "img-circle avatar") %>  
        <% if current_user.name.nil? == false %>
          <%= current_user.name %>'s account</a>
        <% else %>
          <%= current_user.email %>
        <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit profile', edit_user_path(current_user) %></li>
            <li><%= link_to 'Public profile', user_path(current_user) %></li>
            <li><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= button_to 'Sign in', sign_in_path, method: :get, class: "btn btn-info navbar-btn" %></li>
        </ul>
        <% end %>
      </div>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>

<%= yield %>

  <footer class="footer">
      <div class="container">
        <p class="text-muted text-center">Movie App's awesome footer.</p>
      </div>
  </footer>

</body>
</html>
